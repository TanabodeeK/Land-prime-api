generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  firstName String
  lastName  String
  email     String        @unique
  password  String
  phone     String
  address   String
  createAt  DateTime      @default(now())
  updateAt  DateTime      @updatedAt
  role      Role          @default(USER)
  landInfo  LandDetails[]
  whis      Whislist[]
}

enum Role {
  ADMIN
  USER
}

model LandDetails {
  id       Int        @id @default(autoincrement())
  landtype Type
  area     Float
  location String
  price    Float
  User     User?      @relation(fields: [userId], references: [id])
  userId   Int?
  lat      Float
  lng      Float
  status   Status     @default(ACTIVE)
  whis     Whislist[]
  image    Image[]
}

enum Type {
  HOME
  LAND
}

enum Status {
  ACTIVE
  SOLD
}

model Whislist {
  id            Int          @id @default(autoincrement())
  User          User?        @relation(fields: [userId], references: [id])
  userId        Int?
  LandDetails   LandDetails? @relation(fields: [landDetailsId], references: [id])
  landDetailsId Int?
}

model Image {
  id            Int          @id @default(autoincrement())
  image_url     String
  LandDetails   LandDetails? @relation(fields: [landDetailsId], references: [id])
  landDetailsId Int?
}
